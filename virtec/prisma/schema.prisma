// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id 
  email        String
  nombre       String
  apellido     String
  password     String
  dni          Int       @unique
  year         Int
  division     Int
  comision     Int
  especialidad String
  rol          String
  turno        String
  sessions     Session[]

  @@map("user")
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}
